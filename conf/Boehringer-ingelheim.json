        "loop_type": "begin",
        "begin_from" : 1,
        "end_to" : -1,
        "actions": [
          {
            "element": "TD[1]/A",
            "cmd": "openInNewTab",
            "expections": [
              {
                "condition": "newWindowIsOpened",
              },
              {
                "condition": "visibilityOfElementLocated",
                "element": "JD-AllFields",
                "how" :"ID",
              }],
            "debug" : false,
          },
        ],
      },
      "extracts": {
        "job_location": {
          "element": "TD[2]",
        },
        "job_title": {
          "element": "TD[1]/A"
        }
      },
      "procedure": {
        "extracts": {
          "job_description": {
            "element": "JD-AllFields",
            "how": "ID",
          },
          "job_url": {
            "how": "url",
          },
        },
        "actions": [
          {
            "cmd": "restore",
            "expections" : [
              {
                "condition" : "presenceOfElementLocated",
                "element" : "Lst-Tabel",
                "how" : "CLASS_NAME",
              },],
          },
        ]
      },
    }
    "loop": {
      "xpath_prefix": "//SPAN[@class='Lst-NavPage']",
      "loop_type": "begin",
      "loop_for_pages" : true,
      "actions": [
        {
          "element": "A",
          "cmd": "click",
          "expections" : [
            {
              "condition" : "elementTextChanged",
              "element" : "//SPAN[@class='Lst-NavPage'][count(*)=0]",
            },
            {
              "condition" : "presenceOfElementLocated",
              "element" : "Lst-Tabel",
              "how" : "CLASS_NAME",
            },
          ],
        },
      ],
    }
  },
  "job_location_format_regex" : "s/([^\\s]*)\\s+(.*)/$2/g",
}

