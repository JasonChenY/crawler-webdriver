{
  "name": "Boehringer-ingelheim",
  "use_proxy": true,
  "actions" :
  [
    {
      "element": "http://www.boehringer-ingelheim.cn/careers/jobs0.html",
      "how" : "url",
      "cmd" : "load",
      "expections" : [
        {
          "condition" : "presenceOfElementLocated",
          "element" : "//DIV[@class='par parsys']/DIV[@class='mds-cmp-teaser-list item']/DIV[@class='mds-cmp-ll']/UL/LI/A",
        },
      ],
      "debug":false,
    },
    {
      "element" : "//DIV[@class='par parsys']/DIV[@class='mds-cmp-teaser-list item']/DIV[@class='mds-cmp-ll']/UL/LI/A",
      "cmd" : "click",
      "expections" : [
        {
          "condition": "newWindowIsOpened",
        },
        {
          "condition" : "presenceOfElementLocated",
          "element" : "contentlist",
          "how" : "CLASS_NAME",
        },
        {
          "comment:condition" : "presenceOfElementLocated",
          "comment:element" : "pDateL",
          "comment:how" : "ID",
        },
      ],
      "debug":false,
    },
    {
      "element" : "pDateL",
      "how" : "ID",
      "comment:cmd" : "selectByValue",
      "value" : "31",
    },
    {
      "element" : "srcsubmit",
      "how" : "ID",
      "comment:cmd" : "click",
      "expections" : [
        {
          "condition" : "presenceOfElementLocated",
          "element" : "contentlist",
          "how" : "CLASS_NAME",
        }
      ]
    }
  ],

  "procedure" : {
    "procedure": {
      "loop": {
        "xpath_prefix": "//TABLE[@class='contentlist']/TBODY/TR",
        "loop_type": "begin",
        "begin_from" : 0,
        "end_to" : -1,
        "actions": [
          {
            "element": "descendant::A[@title='View this job description']",
            "comment:cmd": "openInNewTab",
            "cmd": "click",
            "expections": [
              {
                "comment:condition": "newWindowIsOpened",
              },
              {
                "condition": "visibilityOfElementLocated",
                "element": "editablesection",
                "how" :"CLASS_NAME",
              }],
            "debug" : false,
          },
        ],
      },
      "extracts": {
        "job_location": {
          "element": "descendant::DIV[@class='morelocation']",
          "transforms" : [
            {
              "comment:how" : "location_regex",
              "comment:value" : "s/([^\\s]*)\\s+(.*)/$2/g",
              "how" : "tokenize",
            }
          ]
        },
        "job_title": {
          "element": "descendant::A[@title='View this job description']"
        }
      },
      "procedure": {
        "extracts": {
          "job_description": {
            "element": "editablesection",
            "how": "CLASS_NAME",
          },
          "job_url": {
            "comment:how": "url",
            "element": "requisitionDescriptionInterface.reqContestNumberValue.row1",
            "how" : "ID",
            "method" : "getText",
            "transforms" : [
              {
                "how" : "insertBefore",
                "value" : "https://tas-boehringer.taleo.net/careersection/global+template+career+section+28external29/jobdetail.ftl?job="
              },
            ],
          },
        },
        "actions": [
          {
            "comment:cmd": "restore",
            "element": "//A[text()='Back to prior page']",
            "cmd": "click",
            "expections" : [
              {
                "condition" : "presenceOfElementLocated",
                "element" : "contentlist",
                "how" : "CLASS_NAME",
              },],
          },
        ]
      },
    }
    "loop": {
      "comment:xpath_prefix": "//SPAN[@class='pagerlink']",
      "comment:loop_type": "begin",
      "comment:loop_item_type" : "page",
      "loop_type":"end",
      "actions": [
        {
          "element": "//A[@title='Go to the next page']",
          "cmd": "click",
          "expections" : [
            {
              "condition" : "elementTextChanged",
              "comment:element" : "//SPAN[@class='pagerlink'][count(*)=0]",
              "element" : "//SPAN[@class='pagerlinkselected']"
            },
            {
              "condition" : "presenceOfElementLocated",
              "element" : "contentlist",
              "how" : "CLASS_NAME",
            },
          ],
        },
      ],
    }
  },
}

