{
  "name" : "3M",
  "use_proxy": true,
  "limitation": "maximum 10 pages, otherwise need fallback to enhance loop_totalpages",
  "actions" :
  [
    {
      "element": "https://jobs.3m.com/search/?location=,CN",
      "how" : "url",
      "cmd" : "load",
      "expections" : [{
        "condition" : "presenceOfElementsLocated",
        "element" : "searchresults",
        "how" : "ID",
      }]
    },
  ],
  "procedure" : {
    "procedure": {
      "loop": {
        "xpath_prefix": "//TABLE[@id='searchresults']/TBODY/TR",
        "loop_type": "begin",
        "actions": [
          {
            "element": "TD[1]/SPAN/A",
            "cmd": "openInNewTab",
            "expections" : [
              {
                "condition": "newWindowIsOpened",
              },
              {
                "condition": "visibilityOfElementLocated",
                "element" : "jobDisplay",
                "how" : "CLASS_NAME",
              }
            ]
          },
        ],
      },
      "extracts": {
        "job_title": {
          "element": "TD[1]/SPAN/A",
        },
        "job_location": {
          "element": "TD[2]/SPAN",
          "transforms" : [
            {
              "how" : "location_regex",
              "value" : "s/([^\\s,-]+).*/$1/g",
            },
          ]
        },
        "job_post_date": {
          "element" : "TD[3]/SPAN",
          "transforms" : [
            {
              "how" : "dateFormat",
              "value" : "MMM dd yyyy",
            }
          ]
        },
      },
      "procedure": {
        "extracts": {
          "job_description": {
            "element" : "job",
            "how" : "CLASS_NAME",
          },
          "job_url": {
            "how": "url",
          },
        },
        "actions": [
          {
            "cmd": "restore",
          },
        ]
      },
    }
    "loop": {
      "xpath_prefix": "//DIV[@class='pagination-bottom']/DIV[@class='paginationShell']/DIV/SPAN[@class='pagination-links']/A",
      "loop_type": "begin",
      "loop_item_type" : "page",
      "begin_from" : 0,
      "end_to" : -1,
      "actions": [
        {
          "element" : ".",
          "cmd" : "click",
          "expections": [{
            "condition" : "presenceOfElementsLocated",
            "element" : "searchresults",
            "how" : "ID",
          }]
        },
      ],
    }
  }
}

